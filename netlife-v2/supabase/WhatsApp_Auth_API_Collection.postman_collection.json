{
  "info": {
    "_postman_id": "whatsapp-auth-api-collection",
    "name": "WhatsApp Authentication API",
    "description": "Complete API collection for WhatsApp-based authentication system with profile management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Send OTP Code",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Store OTP code for next request (development only)",
              "if (pm.response.json().code) {",
              "    pm.environment.set('otp_code', pm.response.json().code);",
              "    console.log('OTP Code stored:', pm.response.json().code);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{SUPABASE_ANON_KEY}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"{{TEST_PHONE_NUMBER}}\"\n}"
        },
        "url": {
          "raw": "{{SUPABASE_URL}}/functions/v1/send-code",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "functions",
            "v1",
            "send-code"
          ]
        },
        "description": "Send OTP code to user's WhatsApp number"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+256758361967\"\n}"
            },
            "url": {
              "raw": "{{SUPABASE_URL}}/functions/v1/send-code",
              "host": [
                "{{SUPABASE_URL}}"
              ],
              "path": [
                "functions",
                "v1",
                "send-code"
              ]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [],
          "cookie": [],
          "body": "{\n    \"success\": true,\n    \"message\": \"OTP code sent successfully via WhatsApp\",\n    \"code\": \"123456\"\n}"
        }
      ]
    },
    {
      "name": "2. Verify OTP Code",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Store user session for profile completion",
              "if (pm.response.json().user) {",
              "    pm.environment.set('user_id', pm.response.json().user.id);",
              "    console.log('User ID stored:', pm.response.json().user.id);",
              "}",
              "",
              "// In a real app, you'd store the JWT token here",
              "// pm.environment.set('user_jwt', pm.response.json().session.access_token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{SUPABASE_ANON_KEY}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phone\": \"{{TEST_PHONE_NUMBER}}\",\n    \"code\": \"{{otp_code}}\"\n}"
        },
        "url": {
          "raw": "{{SUPABASE_URL}}/functions/v1/verify-code",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "functions",
            "v1",
            "verify-code"
          ]
        },
        "description": "Verify OTP code and create user profile with WhatsApp number"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"phone\": \"+256758361967\",\n    \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{SUPABASE_URL}}/functions/v1/verify-code",
              "host": [
                "{{SUPABASE_URL}}"
              ],
              "path": [
                "functions",
                "v1",
                "verify-code"
              ]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [],
          "cookie": [],
          "body": "{\n    \"success\": true,\n    \"message\": \"OTP code verified successfully\",\n    \"user\": {\n        \"id\": \"user-uuid-here\",\n        \"email\": \"256758361967@temp.netlife.com\",\n        \"phone\": \"+256758361967\"\n    }\n}"
        }
      ]
    },
    {
      "name": "3. Complete User Profile",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{USER_JWT_TOKEN}}",
            "description": "In production, use the actual user JWT token from verify-code response"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"johndoe123\",\n    \"full_name\": \"John Doe\",\n    \"date_of_birth\": \"1990-05-15\",\n    \"gender\": \"male\",\n    \"district\": \"Kampala\",\n    \"sub_county\": \"Central Division\",\n    \"preferred_language\": \"en\"\n}"
        },
        "url": {
          "raw": "{{SUPABASE_URL}}/functions/v1/complete-profile",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "functions",
            "v1",
            "complete-profile"
          ]
        },
        "description": "Complete user profile with additional information. Requires user JWT token."
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"johndoe123\",\n    \"full_name\": \"John Doe\",\n    \"date_of_birth\": \"1990-05-15\",\n    \"gender\": \"male\",\n    \"district\": \"Kampala\",\n    \"sub_county\": \"Central Division\",\n    \"preferred_language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{SUPABASE_URL}}/functions/v1/complete-profile",
              "host": [
                "{{SUPABASE_URL}}"
              ],
              "path": [
                "functions",
                "v1",
                "complete-profile"
              ]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [],
          "cookie": [],
          "body": "{\n    \"success\": true,\n    \"message\": \"Profile completed successfully\",\n    \"profile\": {\n        \"id\": \"user-uuid-here\",\n        \"whatsapp_number\": \"+256758361967\",\n        \"username\": \"johndoe123\",\n        \"full_name\": \"John Doe\",\n        \"date_of_birth\": \"1990-05-15\",\n        \"gender\": \"male\",\n        \"district\": \"Kampala\",\n        \"sub_county\": \"Central Division\",\n        \"preferred_language\": \"en\",\n        \"created_at\": \"2025-02-03T10:00:00Z\",\n        \"updated_at\": \"2025-02-03T10:05:00Z\"\n    }\n}"
        }
      ]
    },
    {
      "name": "4. Get Districts (Reference Data)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{SUPABASE_ANON_KEY}}"
          },
          {
            "key": "apikey",
            "value": "{{SUPABASE_ANON_KEY}}"
          }
        ],
        "url": {
          "raw": "{{SUPABASE_URL}}/rest/v1/districts?select=*",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "rest",
            "v1",
            "districts"
          ],
          "query": [
            {
              "key": "select",
              "value": "*"
            }
          ]
        },
        "description": "Get list of available districts for profile completion"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{SUPABASE_URL}}/rest/v1/districts?select=*",
              "host": [
                "{{SUPABASE_URL}}"
              ],
              "path": [
                "rest",
                "v1",
                "districts"
              ],
              "query": [
                {
                  "key": "select",
                  "value": "*"
                }
              ]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [],
          "cookie": [],
          "body": "[\n    {\n        \"id\": 1,\n        \"name\": \"Kampala\",\n        \"region\": \"Central\",\n        \"created_at\": \"2025-02-03T10:00:00Z\"\n    },\n    {\n        \"id\": 2,\n        \"name\": \"Wakiso\",\n        \"region\": \"Central\",\n        \"created_at\": \"2025-02-03T10:00:00Z\"\n    }\n]"
        }
      ]
    },
    {
      "name": "5. Get Sub Counties by District",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{SUPABASE_ANON_KEY}}"
          },
          {
            "key": "apikey",
            "value": "{{SUPABASE_ANON_KEY}}"
          }
        ],
        "url": {
          "raw": "{{SUPABASE_URL}}/rest/v1/sub_counties?select=*&district_id=eq.1",
          "host": [
            "{{SUPABASE_URL}}"
          ],
          "path": [
            "rest",
            "v1",
            "sub_counties"
          ],
          "query": [
            {
              "key": "select",
              "value": "*"
            },
            {
              "key": "district_id",
              "value": "eq.1",
              "description": "Filter by district ID (1 = Kampala)"
            }
          ]
        },
        "description": "Get sub counties for a specific district"
      },
      "response": [
        {
          "name": "Success Response",
          "originalRequest": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{SUPABASE_URL}}/rest/v1/sub_counties?select=*&district_id=eq.1",
              "host": [
                "{{SUPABASE_URL}}"
              ],
              "path": [
                "rest",
                "v1",
                "sub_counties"
              ],
              "query": [
                {
                  "key": "select",
                  "value": "*"
                },
                {
                  "key": "district_id",
                  "value": "eq.1"
                }
              ]
            }
          },
          "status": "OK",
          "code": 200,
          "_postman_previewlanguage": "json",
          "header": [],
          "cookie": [],
          "body": "[\n    {\n        \"id\": 1,\n        \"name\": \"Central Division\",\n        \"district_id\": 1,\n        \"created_at\": \"2025-02-03T10:00:00Z\"\n    },\n    {\n        \"id\": 2,\n        \"name\": \"Kawempe Division\",\n        \"district_id\": 1,\n        \"created_at\": \"2025-02-03T10:00:00Z\"\n    }\n]"
        }
      ]
    }
  ],
  "event": [
